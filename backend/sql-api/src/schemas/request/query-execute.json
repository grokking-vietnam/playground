{
  "$id": "https://api.example.com/schemas/query-execute-request.json",
  "title": "Query Execution Request",
  "description": "Request payload for executing SQL queries",
  "type": "object",
  "properties": {
    "query": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100000,
      "description": "SQL query to execute"
    },
    "connectionId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "minLength": 1,
      "maxLength": 100,
      "description": "Unique connection identifier"
    },
    "connection": {
      "$ref": "https://api.example.com/schemas/connection-config.json"
    },
    "options": {
      "type": "object",
      "properties": {
        "timeout": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 300000,
          "description": "Query timeout in milliseconds"
        },
        "maxRows": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50000,
          "description": "Maximum rows to return"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["query", "connectionId", "connection"],
  "additionalProperties": false
}
