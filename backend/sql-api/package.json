{
  "name": "sql-editor-api",
  "version": "1.0.0",
  "description": "Backend API for SQL Editor with real PostgreSQL connectivity",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "pnpm run generate-types",
    "generate-types": "node scripts/generate-types-simple.js",
    "test": "jest --testTimeout=30000",
    "test:watch": "jest --watch --testTimeout=30000",
    "test:coverage": "jest --coverage --testTimeout=30000",
    "test:integration": "jest --testPathPattern=integration --testTimeout=60000",
    "test:unit": "jest --testPathPattern=unit --testTimeout=10000"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@types/jest": "^29.5.8",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^15.0.4",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "testcontainers": "^10.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
